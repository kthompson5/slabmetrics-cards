---
import Header from "../components/Header.tsx";
const { title = "SlabMetrics", desc = "", jsonLd } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={desc} />
    <style>
      :root{
        --sm-white:#fff; --sm-black:#0B0B0B; --sm-green:#12B886;
        --sm-green-600:#0E9970; --sm-green-100:#E6FBF4;
        --sm-gray-100:#F5F5F5; --sm-gray-700:#3C3C3C;
        color-scheme: light dark;
      }
      *{ box-sizing: border-box }
      body{ margin:0; font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial;
        background:var(--sm-white); color:var(--sm-black) }
      .wrap{ max-width:1060px; margin:0 auto; padding:16px }
      .grid{ display:grid; gap:20px; grid-template-columns: 1fr; }
      @media (min-width: 980px){ .grid{ grid-template-columns: 1.2fr 1fr; } }
      .card{ background:#fff; border:1px solid rgba(0,0,0,.08); border-radius:14px; padding:16px; }
      a{ color: var(--sm-green) }
      .muted{ opacity:.8 }
      .h1{ font-size: clamp(22px, 2.4vw + 10px, 34px); font-weight:800; line-height:1.08; margin:0 0 6px }
      .pill{ font-size:12px; border:1px solid rgba(0,0,0,.12); border-radius:999px; padding:6px 10px }
/* In CardLayout.astro <style> or a CSS file */
.hero .hero-title{ display:flex; align-items:center; gap:10px; }
.hero .accent{ width:8px; height:28px; border-radius:6px; background:var(--sm-green); opacity:.9 }
.h1{ font-size: clamp(26px, 3.1vw + 10px, 38px); font-weight: 900; margin:0 }
.subline{ font-size: clamp(14px, 1vw + 10px, 18px); opacity:.9; margin-top:6px }
.meta{ display:flex; gap:10px; flex-wrap:wrap; margin-top:10px }    
</style>
    {jsonLd && (<script type="application/ld+json">{JSON.stringify(jsonLd)}</script>)}
  </head>
  <body>
    <Header client:load />
    <slot />
  </body>
</html>
